<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanxi.mapper.RoleMenuMapper">

    <!--给角色添加权限-->
    <insert id="addRoleMenu">
        insert into
        t_role_menu ( role_id, menu_id )
        values
        <foreach collection="permsIds" separator="," item="permsId">
            ( #{id}, #{permsId} )
        </foreach>
    </insert>

    <!--删除角色权限信息-->
    <delete id="delRoleMenu">
        delete from t_role_menu where role_id = #{id}
    </delete>

    <!--根据角色id查询权限信息-->
    <select id="selectMenuByRoleId" resultType="com.wanxi.pojo.Menu">
        SELECT
            m.*
        FROM
            t_role_menu rm
                LEFT JOIN t_menu m ON rm.`role_id` = m.`id`
        WHERE role_id = #{roleId}

    </select>
</mapper>